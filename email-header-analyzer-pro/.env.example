# =============================================================================
# Email Header Analyzer Pro v2.0 - Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# External API Configuration (Optional but recommended for full functionality)
# -----------------------------------------------------------------------------

# AbuseIPDB API Key - Get from https://www.abuseipdb.com/api
# Free tier: 1,000 requests/day
ABUSEIPDB_API_KEY=your_abuseipdb_api_key_here

# VirusTotal API Key - Get from https://www.virustotal.com/gui/my-apikey  
# Free tier: 4 requests/minute
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# IPInfo.io Token - Get from https://ipinfo.io/account/token
# Free tier: 50,000 requests/month  
IPINFO_TOKEN=your_ipinfo_token_here

# -----------------------------------------------------------------------------
# Analysis Configuration
# -----------------------------------------------------------------------------

# Enable/disable analysis components
ENABLE_GEO_ANALYSIS=true
ENABLE_DNS_ANALYSIS=true
ENABLE_BLACKLIST_CHECKS=true
ENABLE_CONTENT_ANALYSIS=true

# API request settings
DEFAULT_TIMEOUT=10
API_TIMEOUT=10
MAX_RETRIES=3
RETRY_DELAY=1.0

# DNS settings
DNS_TIMEOUT=5
DNS_NAMESERVERS=8.8.8.8,1.1.1.1

# Risk scoring thresholds
HIGH_RISK_THRESHOLD=70
MEDIUM_RISK_THRESHOLD=40

# Cache settings (hours)
CACHE_DURATION=24

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# Database file path
DATABASE_PATH=data/email_analyzer.db

# Backup settings
DATABASE_BACKUP=true
DATABASE_BACKUP_INTERVAL=24

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file settings
LOG_DIR=logs
LOG_FILE=email_analyzer.log
MAX_LOG_SIZE_MB=10
LOG_BACKUP_COUNT=5
ENABLE_CONSOLE_LOGGING=true

# -----------------------------------------------------------------------------
# User Interface Configuration
# -----------------------------------------------------------------------------

# Page settings
PAGE_TITLE=Email Header Analyzer Pro
UI_THEME=light
UI_ITEMS_PER_PAGE=25
AUTO_REFRESH_INTERVAL=30

# -----------------------------------------------------------------------------
# Report Configuration
# -----------------------------------------------------------------------------

# Report output directory
REPORT_OUTPUT_DIR=reports

# Report settings
REPORT_INCLUDE_RAW=false
PDF_TEMPLATE=default
COMPANY_NAME=Security Analysis Team
COMPANY_LOGO=

# -----------------------------------------------------------------------------
# Performance Configuration
# -----------------------------------------------------------------------------

# Memory and performance settings
MAX_CONCURRENT_REQUESTS=10
ENABLE_ASYNC_ANALYSIS=true
BACKGROUND_CLEANUP_ENABLED=true

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------

# Session settings (if authentication is added)
SESSION_TIMEOUT_MINUTES=60
ENABLE_API_KEY_ROTATION=false

# Data retention (days)
DATA_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# Development Settings (only for development environments)
# -----------------------------------------------------------------------------

# Development mode
DEV_MODE=false
DEBUG_API_CALLS=false
DISABLE_RATE_LIMITING=false

# Testing
MOCK_EXTERNAL_APIS=false
TEST_DATA_DIR=tests/sample_headers

# =============================================================================
# Notes:
# 
# 1. All API keys are optional - the tool will work without them but with 
#    reduced functionality
# 
# 2. Free tier limits:
#    - AbuseIPDB: 1,000 requests/day
#    - VirusTotal: 4 requests/minute
#    - IPInfo.io: 50,000 requests/month
# 
# 3. The application will automatically create necessary directories
# 
# 4. For production use, consider:
#    - Setting up log rotation
#    - Implementing regular database backups
#    - Using a reverse proxy with HTTPS
#    - Adding authentication/authorization
# 
# 5. Monitor disk space usage in logs/ and data/ directories
# =============================================================================
